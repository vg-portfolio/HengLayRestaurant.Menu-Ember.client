<!--Toggle category buttons-->
<div class="center-align">
  <h5 class="category-type">{{filteredCategory.categoryType}}</h5>
  {{#if filteredCategory.categoryTypeKhmer}}
  <h5 class="category-type-khmer">{{filteredCategory.categoryTypeKhmer}}</h5>
  {{/if}}
  {{!-- <h6 class="category-khmer">{{filteredCategory.categoryTypeKhmer}}</h6> --}}
</div>

<!--Collection of menu items that belongs to the filtered category////////////////-->
<div class="row">
  {{#each sortedDishes as |dish|}}
   <div class="col s12 menu-item">
     <div class="card-panel hoverable">
       <div class="row">
         <div class="col s8 m10 item-content">
           {{#if dish.itemNumber}}
           <h6>#{{dish.itemNumber}}</h6>
           {{/if}}
           <h5 class="title item-title">{{dish.name}}
           </h5>
           <h6 class="item-khmer-title">{{dish.khmerName}}</h6>
           <p>{{dish.description}}</p>
         </div>
         <div class="col s4 m2 item-content right-align">
           {{#if dish.seasonal}}
           <h5 class="item-price">Seasonal</h5>
           {{else}}
           <h5 class="item-price">{{format-money dish.price symbol=selectedCurrency format="%s %v"}}</h5>
           {{#if dish.price2}}
            <h5 class="item-price large-size">{{format-money dish.price2 symbol=selectedCurrency format="%s %v"}}</h5>
            <p class="size-label">LARGE</p>
           {{/if}}
           {{!-- {{#if dish.price3}}
            <h5 class="item-price">{{format-money dish.price3 symbol=selectedCurrency format="%s %v"}}</h5>
           {{/if}} --}}
           {{/if}}
         </div>
       </div><!--/.row-->
       <!--Display admin buttons if user is authenticated-->
       {{#if isAuthenticated}}
         {{admin-tools/edit-delete
           editName='all-forms/edit-dish'
           deleteName='all-forms/delete-dish'
           deleteItem=attrs.deleteItem
           editItem=attrs.editItem
           dish=dish
           categories=categories}}
       {{/if}}
     </div>
   </div>
   {{/each}}
 </div>
